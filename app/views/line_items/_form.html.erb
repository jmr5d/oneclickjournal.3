<%= simple_form_for(@line_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :value %>
    <%= f.association :measure_unit %>
    <%= f.association :measure_name %>
    <%= f.association :measurement %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
