<%= simple_form_for(@measurement) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :altitude %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :happened_at %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
